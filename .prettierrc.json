{
  "singleQuote": false,
  "trailingComma": "all",
  "printWidth": 100,
  "semi": false,
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],

  "importOrder": [
    "server-only",
    "^(path|url|sharp)$",
    "^next/(.*)$",
    "^@payloadcms/(.*)$",
    "payload$",
    "^@payload-types/(.*)$",
    "^@data/(.*)$",
    "^@components/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
